<div class="flex flex-col items-center gap-4">
  <% @recipes.each do |recipe| %>
    <div class="bg-peach text-almostblack w-2/3 p-4 flex flex-col">
      <div class="flex flex-row items-center gap-2">
        <p> <%= image_tag(recipe.user.avatar, size: 42, class: "rounded-full") if recipe.user.avatar.attached? %></p>
        <p><span class="font-bold"><%= recipe.user.name.titleize %></span> <%= recipe.status == "want_to_cook" ? "wants to cook" : "cooked" %></p>
      </div>
       <h2><%= recipe.recipe_source.original_title %></h2>
      <img class="object-cover h-48 w-full" src=<%= recipe.recipe_source.image_url %>>
    </div>
  <% end %>
</div>
